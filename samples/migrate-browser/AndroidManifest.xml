<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.migrate.browser"
          android:versionCode="1"
          android:versionName="1.0" >

    <uses-sdk
            android:minSdkVersion="11"
            android:targetSdkVersion="18" />

    <application
            android:name=".MigrateBrowserApplication"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            >

        <activity
                android:name=".ObjectsActivity"
                android:label="@string/activity_object_list"
                >
        </activity>

        <activity
                android:name=".SchemaDetailActivity"
                android:label="@string/activity_schema_detail"
                >
        </activity>
        <activity
                android:name=".SchemasActivity"
                android:label="Browse WebData Schema"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".ObjectDetailActivity"
                android:label="@string/activity_object_detail"
                />
        <activity
                android:name=".PrefsActivity"
                android:label="@string/activity_prefs"
                />
        <activity
                android:name=".ResolveObjectActivity"
                android:label="@string/activity_resolve"
                />
    </application>
</manifest>
